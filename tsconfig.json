{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/core/*"],
      "@state/*": ["src/state/*"],
      "@scenes/*": ["src/scenes/*"],
      "@ui/*": ["src/ui/*"]
    },
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
